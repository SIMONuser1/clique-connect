<div class="card">
    <div class="card-header bg-secondary d-flex justify-content-between">
        <h3>Notes</h3>
        <form class="d-flex align-items-center">
            <span class="mr-2 text-muted text-small text-nowrap">Sort by:</span>
            <select class="custom-select">
                <option value="alpha">Alphabetical</option>
                <option value="old-new" selected>Newest</option>
                <option value="new-old">Popular</option>
                <option value="recent">Recently Updated</option>
            </select>
        </form>
    </div>
    <ul class="list-group list-group-flush list-group-comments">
      <% current_user.business.business_notes(@business).each do |note| %>
        <li class="list-group-item py-4">
            <div class="media">
                <img alt="Image" src="assets/img/avatar-male-3.jpg" class="avatar avatar-sm" />
                <div class="media-body">
                    <div class="mb-2">
                        <span class="h6 mb-0"><%= note.author.full_name %></span>
                        <span class="text-muted"><%= note.author.location %></span>
                    </div>
                    <p><%= note.content %></p>
                    <div class="d-flex align-items-center">
                        <small class="text-muted"><%= note.created_at %></small>
                    </div>
                </div>
            </div>
        </li>
      <% end %>
      <li>
        <%= simple_form_for @note, url: business_notes_path(@business) do |f| %>
          <%= f.input :content %>
          <%= f.button :submit %>
        <% end %>
      </li>
    </ul>
</div>
