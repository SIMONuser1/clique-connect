<div class="main-container">
  <section class="space-sm">
    <div class="container align-self-start">
      <div class="row mb-5">
          <!--end of col-->
      </div>
          <!--end of row-->
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-7">
          <div class="card card-lg text-center">
            <div class="card-body">
              <div class="mb-5">
                <h1 class="h2 mb-2">Welcome Back!</h1>
                <span>Sign in &amp; say hello!</span>
              </div>
              <div class="row no-gutters justify-content-center">
                <div class="text-left col-lg-8">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                  <div class="form-group">
                    <%= f.input :email, required: false, autofocus: true %>
                  </div>
                  <div class="form-group">
                    <%= f.input :password, required: false %>
                    <small>Forgot your password? <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Reset it Here", new_password_path(resource_name) %><br />
                    <% end -%>
                    </small>
                  </div>
                  <div class="form-group">
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class="text-center mt-3">
                    <%= f.button :submit, class: "btn-primary" %>
                  </div>
                <% end %>
                </div>
              </div>
        <!--end of row-->
            </div>
          </div>
          <div class="text-center">
            <span class="text-small">Don't have an account yet? <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Create an account here", new_registration_path(resource_name) %><br />
            <% end -%>
          </span>
          </div>
        </div>
              <!--end of col-->
      </div>
          <!--end of row-->
    </div>
      <!--end of container-->
  </section>
            <!--end of section-->
</div>

