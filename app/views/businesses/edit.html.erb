<% unless @business.users.where(id: current_user.id).empty? %>
  <%= render 'form', business: @business %>

  <%= link_to 'Show', @business %> |
  <%= link_to 'Back', businesses_path %>
<% else %>
  <section class="height-70">
    <div class="container">
      <div class="row justify-content-center">
          <div class="col-12 col-md-6 col-lg-5">
              <div class="card card-lg text-center">
                  <div class="card-body">
                      <i class="icon-add-to-list display-4 opacity-20"></i>
                      <h1 class="h5">Oops! This is not your Business!</h1>
                      <p>
                          If you would like to edit your business, click the button below!

                      </p>
                      <%= link_to edit_business_path(current_user.business) do%>
                        <div class="btn btn-lg btn-primary">
                          Edit my Profile
                        </div>
                      <% end %>
                  </div>
              </div>
          </div>
          <!--end of col-->
      </div>
      <!--end of row-->
    </div>
  </section>
<% end %>
